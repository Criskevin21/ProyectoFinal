<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:layout_width="350dp"
    android:layout_height="190dp">

    <ImageView
        android:id="@+id/img_show"
        android:layout_width="0dp"
        android:contentDescription="@null"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/aji_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_platillo"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:layout_height="wrap_content"
        android:text="Ají de Gallina"
        android:textColor="#ffffff"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_descrip"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_descrip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Un buen Aji de Gallina Peruano tiene que tener ese color característico del aji amarillo y tambien ser cremoso"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>